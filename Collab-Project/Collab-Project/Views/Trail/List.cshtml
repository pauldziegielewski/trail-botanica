@model IEnumerable<Collab_Project.Models.TrailDto>
@{
    ViewBag.Title = "List";
}

<h1>List of Trails in Ontario</h1>
@if (User.IsInRole("Admin"))
{
    <a href="/Trail/NewTrail">New Trail</a>
}


<div class="list-container">
    @foreach (var trail in Model)
    {
        <p><a href="/Trail/Show/@trail.TrailID">@trail.TrailName</a></p>
    }
</div>



<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
        color: #333;
    }

    h1 {
        color: #006400;
        margin-bottom: 20px;
    }

    a {
        color: #006400;
        text-decoration: none;
    }

        a:hover {
            color: #ab2020;
        }

    .list-container {
        margin-top: 20px;
    }

        .list-container p {
            margin-bottom: 10px;
        }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #d3e5d8;
        color: #006400;
        text-decoration: none;
        border: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
        cursor: pointer;
    }

        .btn:hover {
            background-color: #b1d2ac;
        }
</style>
