﻿@model Collab_Project.Models.TrailDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this trail?</h2>
<nav>
    <ul>
        <li><a href="/Trail/List">Cancel</a></li>
        <li><a href="/Trail/Edit/@Model.TrailID">Update</a></li>
    </ul>
</nav>
<h3>@Model.TrailName</h3>

<div>Location: @Model.LocationName</div>
<form action="/Trail/Delete/@Model.TrailID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>


<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #006400;
        margin-bottom: 20px;
    }

    h3 {
        color: #006400;
        margin-bottom: 10px;
    }

    h4 {
        color: #006400;
        margin-bottom: 15px;
    }

    input[type="submit"] {
        padding: 8px 12px;
        background-color: #ab2020;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 10px;
    }

    .btn-default {
        padding: 8px 12px;
        background-color: #fff;
        color: #006400;
        border: 1px solid #ccc;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-container {
        margin-top: 20px;
    }
</style>