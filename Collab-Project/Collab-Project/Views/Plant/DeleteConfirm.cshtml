@model Collab_Project.Models.PlantDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Delete Confirmation</h2>

<p>Are you sure you want to delete this plant?</p>

<a href="/Plant/List">Cancel</a>

<h3>Name: @Model.Plant_Name</h3>

<form action="/Plant/Delete/@Model.Plant_Id" method="POST">

    <input type="submit" value="Confirm Delete" />

</form>