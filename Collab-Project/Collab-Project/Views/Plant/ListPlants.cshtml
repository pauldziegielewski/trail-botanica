@model IEnumerable<Collab_Project.Models.PlantDto>
@{
    ViewBag.Title = "ListPlants";
}

<h1>List Plants</h1>

@if (User.IsInRole("Admin"))
{
 
    <a href="/Plant/NewPlant">New Plant</a>
}


@foreach (var plant in Model)
{
    <h4><a href="/Plant/Details/@plant.Plant_Id">@plant.Plant_Name</a></h4>

}



<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
        color: #333;
    }

    h1 {
        color: #006400;
        margin-bottom: 20px;
    }

    h4 {
        color: #006400;
        margin-bottom: 10px;
    }

    a {
        color: #006400;
        text-decoration: none;
    }

        a:hover {
            color: #ab2020;
        }
</style>

