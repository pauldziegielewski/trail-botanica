﻿@model Collab_Project.Models.ViewModels.LocationDetails


@{
    ViewBag.Title = "View";
}



<nav>
    <ul>

        <li><a class="btn" href="/Location/Listlocations">Go back to list</a></li>


        @{
            if (Model.IsAdmin)
            {
                <li><a class="btn" href="/Location/Edit/@Model.SelectedLocation.LocationID">Update</a></li>

                <li>
                    <a class="delete" style="color:#ab2020;" href="/Location/DeleteConfirm/@Model.SelectedLocation.LocationID">Delete</a>
                </li>
            }
        }

    </ul>
</nav>

<div class="row">
    <div class="col-md-6 col-sm-12">


    </div>
    <div class="col-md-6 col-sm-12 test">
        <h3>@(Model.SelectedLocation.LocationName)</h3>
        @foreach (var trail in Model.RelatedTrails)
        {
            <a class="LocationList" href="/Trail/Show/@trail.TrailID">@trail.TrailName</a>

        }
    </div>
</div>




