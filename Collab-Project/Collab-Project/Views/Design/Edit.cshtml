﻿@model Collab_Project.Models.DesignDto

@{
    ViewBag.Title = "Edit";
}

<h2>Update Design</h2>
<form action="/Design/Update/@Model.Design_Id" method="POST">
    <div style="display:none;">
        @* Pass through the Design ID *@
        <input type="text" name="Design_Id" value="@Model.Design_Id" />
    </div>
    <div>
        <label>Description:</label> <input type="text" name="Descripton" value="@Model.Description" />
    </div>
    <div>
        <label>Drawing:</label> <input type="text" name="Drawing_Plan" value="@Model.Drawing_Plan" />
    </div>

    <div>
        <input type="submit" value="Update Design" />

    </div>
</form>




<style>
    body {
        background-color: #f0f0f0;
        font-family: Arial, sans-serif;
        color: #333;
        padding: 20px;
    }

    h2 {
        color: #006400;
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 10px;
    }

    input[type="text"] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 100%;
    }

    input[type="submit"] {
        padding: 8px 12px;
        background-color: #ab2020;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>